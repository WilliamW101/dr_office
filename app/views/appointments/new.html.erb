<h1 class='center'> Make Appointment </h1>
<hr />

<%= form_for @appointment do |f| %>
  <%= f.select :doctor_id, options_for_select(@doctors) %>
  <%= f.select :patient_id, options_for_select(@patients) %>
  <%= f.text_field :time, required: true, placeholder: 'Time' %>
  <div class='center'>
    <%= f.submit nil, class:'btn grey lighten-2 black-text' %>
  </div>
<% end %>

<%= link_to 'All Doctors', doctors_path %>  |
<%= link_to 'All Patients', patients_path %>
