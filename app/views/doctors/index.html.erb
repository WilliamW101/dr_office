<h1 class='center'> Doctors </h1>
<br />

<ul>
  <% @doctors.each do |doctor| %>
    <li>
      <strong> <%= link_to doctor.name, doctor_path(doctor) %> </strong> |
      <%= link_to 'Edit', edit_doctor_path(doctor) %>.
      <%= link_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are You Sure?' } %>.
    </li>
  <% end %>
</ul>
<br />

<div class='center'>
  <%= link_to 'New Doctor', new_doctor_path, class: 'btn grey lighten-2 black-text' %>
</div>
