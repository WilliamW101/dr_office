<h1 class='center'> <%= @doctor.name %> </h1>
<h5 class='center'> Specality: <%= @doctor.specality %> </h5>
<br />

<% if @doctor.patients.any? %>
  <h5> <u> Patients </u> </h5>
    <ul>
      <% @doctor.appointments.each do |appointment| %>
        <li>
          <%= appointment.patient.name %> - <%= appointment.time %> -
          <%= link_to 'Remove', appointment_path(appointment), method: :delete, data: { confirm: 'Really Delete?' } %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h5> No Patients Found </h5>
  <% end %>

<div class='center'>
  <%= link_to 'Make Appointment', new_appointment_path, class: 'btn grey lighten-2 black-text' %>
</div>
